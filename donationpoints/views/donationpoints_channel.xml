<odoo>

    <record model="ir.ui.view" id="donationpoints_channel_form_view">
        <field name="name">donationpoints.channel.form (in donationpoints)</field>
        <field name="model">donationpoints.channel</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                           
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="state"/>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                    <group>
                        <field name="note"/>
                    </group>
                </sheet>
                <div class="oe_chatter"></div>
            </form>
        </field>
    </record>
    

    <record model="ir.ui.view" id="donationpoints_channel_search_view">
        <field name="name">donationpoints.channel.search (in donationpoints)</field>
        <field name="model">donationpoints.channel</field>
        <field name="arch" type="xml">
            <search>
                <!-- filter -->
                <filter name="filter_state_active" string="Active" domain="[('state','=','active')]"/>
                <filter name="filter_state_suspended" string="Suspended" domain="[('state','=','suspended')]"/>
                <filter name="filter_state_cancelled" string="Cancelled" domain="[('state','=','cancelled')]"/>
                <filter name="filter_state_closed" string="Closed" domain="[('state','=','closed')]"/>
                
                <filter name="groupby_state" string="State" context="{'group_by':'state'}"/>
                <filter name="groupby_user" string="Responsible" context="{'group_by':'user_id'}"/>

                <!-- search fields -->
                <field name="user_id" string="Responsible"/>
                <field name="name" string="Channel"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="donationpoints_channel_tree_view">
        <field name="name">donationpoints.channel.tree (in donationpoints)</field>
        <field name="model">donationpoints.channel</field>
        <field name="arch" type="xml">
            <tree>
                
                <field name="name"/>
                <field name="user_id"/>
                <field name="state"/>
                <field name="start_date"/>
                <field name="end_date"/>
                
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="donationpoints_channel_act_window">
        <field name="name">Donationpoints channel</field> 
        <field name="res_model">donationpoints.channel</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

   
</odoo>
