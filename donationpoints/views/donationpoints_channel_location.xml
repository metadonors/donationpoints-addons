<odoo>

    <record model="ir.ui.view" id="donationpoints_channel_location_form_view">
        <field name="name">donationpoints.channel.location.form (in donationpoints)</field>
        <field name="model">donationpoints.channel.location</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>
                        <field name="channel_id"/>
                    </h1>
                    <group>
                        <group>                       
                            <field name="location_id"/>
                            <field name="location_owner_id"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                        <group>                       
                            <field name="channel_id"/>
                            <field name="activity_state"/>                        
                        </group>
                    </group>
                    <notebook>
                        <page string='Contact result'>
                            <field name="contact_result"/>
                        </page>
                        <page string='note'>
                            <field name="note"/>
                        </page>
                    </notebook>
                    <tree>
                        <field name="donationbox_ids"/>
                    </tree>
                </sheet>
                <div class="oe_chatter"></div>
            </form>
        </field>
    </record>

    <!--  = fields.Many2one('donationpoints.channel', string=_('Channel'))
    
    contact_result = fields.Text(string=_('Contact Result'))
    note = fields.Text(string=_('Note')) -->

  <record model="ir.ui.view" id="donationpoints_channel_location_search_view">
        <field name="name">donationpoints.channel.location.search (in donationpoints)</field>
        <field name="model">donationpoints.channel.location</field>
        <field name="arch" type="xml">
            <search>
                <!-- activity state -->
                <filter name="filter_active" string="Active" domain="[('activity_state','=','active')]"/>
                <filter name="filter_suspended" string="Suspended" domain="[('activity_state','=','suspended')]"/>
                <filter name="filter_closed" string="Closed" domain="[('activity_state','=','closed')]"/>
                <filter name="filter_retired" string="Retired" domain="[('activity_state','=','retired')]"/>
                <filter name="filter_denied" string="Denied" domain="[('activity_state','=','denied')]"/>
                <filter name="filter_active" string="Active" domain="[('activity_state','=','active')]"/>
                <separator/>
                <!-- channel state -->
                <!-- <filter name="filter_channel_active_old" string="Channel Active" domain="[('channel_id_state','=','active')]"/>
                <filter name="filter_channel_suspended_old" string="Channel Suspended" domain="[('channel_id_state','=','suspended')]"/>
                <filter name="filter_channel_cancelled_old" string="Channel Cancelled" domain="[('channel_id_state','=','cancelled')]"/>
                <filter name="filter_channel_closed_old" string="Channel Closed" domain="[('channel_id_state','=','closed')]"/>
                <separator/> -->
                <filter name="filter_channel_active" string="Channel Active" domain="[('channel_id.state','=','active')]"/>
                <filter name="filter_channel_suspended" string="Channel Suspended" domain="[('channel_id.state','=','suspended')]"/>
                <filter name="filter_channel_cancelled" string="Channel Cancelled" domain="[('channel_id.state','=','cancelled')]"/>
                <filter name="filter_channel_closed" string="Channel Closed" domain="[('channel_id.state','=','closed')]"/>

                <!-- group_by -->
                <filter name="groupby_channel" string="Channel" context="{'group_by':'channel_id'}"/>
                <filter name="groupby_location" string="Location" context="{'group_by':'location_id'}"/>
                <filter name="groupby_user" string="Owner" context="{'group_by':'location_owner_id'}"/>
                
                <!-- search fields -->
                <field name="location_owner_id" string="Owner"/>
                <field name="location_id" string="Location"/>
                <field name="channel_id" string="Channel"/>
                <!--field name="donationbox_ids" string="Donationbox"/-->
            </search>
        </field>
    </record>


    <record model="ir.ui.view" id="donationpoints_channel_location_tree_view">
        <field name="name">donationpoints.channel.location.tree (in donationpoints)</field>
        <field name="model">donationpoints.channel.location</field>
        <field name="arch" type="xml">
            <tree>
                <field name="channel_id"/>
                <!--field name="channel_id_state"/-->
                <field name="location_id"/>
                <field name="activity_state"/>
                <field name="location_owner_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </tree>
        </field>
    </record>


    <record model="ir.actions.act_window" id="donationpoints_channel_location_act_window">
        <field name="name">Activity</field> 
        <field name="res_model">donationpoints.channel.location</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

</odoo>
