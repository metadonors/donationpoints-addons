<?xml version="1.0" ?>
<odoo>
  <record id="module_donationpoints_category" model="ir.module.category">
    <field name="name">Donationpoints</field>
  </record>

  <!-- Donationpoints User Group -->
  <record id="donationpoints_group_user" model="res.groups">
    <field name="name">User</field>
    <field name="category_id" ref="module_donationpoints_category"/>
    <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
  </record>

  <!-- Donationpoints Manager Group -->
  <record id="donationpoints_group_manager" model="res.groups">
    <field name="name">Manager</field>
    <field name="category_id" ref="module_donationpoints_category"/>
    <field name="implied_ids" eval="[(4, ref('donationpoints_group_user'))]"/>
    <field name="users" eval="[(4, ref('base.user_root')),(4, ref('base.user_admin'))]"/>
  </record>


</odoo>
